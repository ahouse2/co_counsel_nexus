}

.dev-team-task-description {
  margin: 0;
  font-size: 0.95rem;
  color: var(--color-text-secondary);
}

.dev-team-task-notes,
.dev-team-task-tags {
  margin: 0;
  font-size: 0.75rem;
  color: var(--color-text-muted);
}

.dev-team-proposal-list {
  margin: 0.35rem 0 0.75rem;
  display: grid;
  gap: 0.35rem;
}

.dev-team-proposal {
  border: 1px solid rgba(255, 255, 255, 0.06);
