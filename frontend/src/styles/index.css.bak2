}

.dev-team-proposal button {
  width: 100%;
  background: none;
  border: none;
  color: inherit;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 0.75rem;
  padding: 0.6rem 0.8rem;
